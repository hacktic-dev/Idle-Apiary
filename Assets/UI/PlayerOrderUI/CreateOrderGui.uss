.create-order-gui {
    margin-right: auto;
    margin-left: auto;
    position: absolute;
    margin-top: auto;
    margin-bottom: auto;
    bottom: 36%;
    width: 100%;
}

.order-item {
    display: flex;
    flex-direction: row;
    align-items: center;
    margin: 5px;
    background-color: rgba(0,0,0,.35);
    border-radius: 10px;
}

.title {
    font-size: 16px;
    margin: 5px;
    color: white;
}


#Orders_Root {
    position: absolute;
    flex-shrink: 1;
    background-color: rgba(0,0,0,.25);
    border-radius: 10px;
    overflow: scroll;
    bottom: 0px;
    align-self: center;
    min-width: 350px;
    width: 25%;
    max-width: 90%;
    flex-grow: 1;
}

.hidden {
    display: none;
}

.shop-ui_status {
    position: absolute;
    align-self: center;
    top: 275px;
    font-size: 40px;
    color: #fff;
    text-shadow: 2px 2px 0px rgba(0, 0, 0, 0.5);
}


.close-button {
    background-color: rgba(255, 0, 0, 0.5); /* Red for visibility */
    border-radius: 5px;
    padding: 5px 10px;
    color: white;
    font-size: 16px;
    margin-top: 10px;
    width: 200px;
    margin-left: auto;
    margin-right: auto;
    align-self: center;
    position: absolute;
}
