.place-apiary-status {
    width: 100%;
    margin-top: auto;
    margin-bottom: auto;
    flex-direction: row;
    max-height: 100%;
    min-height: 100%;
}

/* Apiary UI Styles */
.apiary-ui__status {
    position: absolute;
    align-self: center;
    font-size: 24px;
    white-space: normal;
    width: 100%;
    flex-wrap: wrap;
    color: #fff;
    bottom: 150px;
    -unity-text-align: middle-center;
    text-shadow: 2px 2px 0px rgba(0, 0, 0, 0.5);
}