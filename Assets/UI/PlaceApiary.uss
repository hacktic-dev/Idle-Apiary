.combined-ui {
    position: relative;
    display: flex;
    flex-direction: column;
    align-self: center;
    flex-grow: 1;
    height: 100%; /* Ensure it occupies full height for alignment */
}

.buttons-container {
    position: absolute;
    display: flex;
    flex-direction: column; /* Stack buttons vertically */
    align-self: center;
    bottom: -00px; /* Position from the bottom of the screen */
    gap: 20px; /* Space between buttons */
}

/* Button Styles */
.primary-button, .capture-button, .greyed-out-button {
    width: 200px; /* Uniform width for buttons */
    height: 50px; /* Uniform height for buttons */
}

.greyed-out-button{
    background-color: #666666; /* Blue */
    color: white;
    border-radius: 10px;
    padding: 12px;
}

.primary-button {
    background-color: #007bff; /* Blue */
    color: white;
    border-radius: 10px;
    padding: 12px;
}

.primary-button:hover {
    background-color: rgba(0, 123, 255, 0.7); /* Slightly transparent blue on hover */
}

.capture-button {
    background-color: #ffcc00;
    font-size: 18px;
    color: #000;
    border-radius: 10px;
    padding: 12px;
    margin-top: 10px;
}


.flower-button {
    background-color:rgba(5, 88, 8, 0.8);
    font-size: 18px;
    color: #fff
    border-radius: 10px;
    padding: 12px;
    margin-top: 10px;
}

.furniture-button {
    background-color:rgba(22, 92, 161, 0.8);
    font-size: 18px;
    color: #ffffff
    border-radius: 10px;
    padding: 12px;
    margin-top: 10px;
}

.capture-button:hover {
    background-color: #ffaa00;
}

.label{
    color: #ffffff
}

.hidden{
    display: none;
}

.shown{
    display: flex;
}

.unity-text-element
{
	-unity-font-definition: url("project://database/Assets/Winter Selfie SDF.asset");
	text-shadow: 4px 4px 9.5px rgba(0,0,0,0.5);
    -unity-text-align: middle-center;
}